{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "templates/**/*.hbs",
        "exclude": "**/*.ts",
        "outDir": "dist/src/templates",
        "watchAssets": true
      }
    ],
    "watchAssets": true
  },
  "generateOptions": {
    "flat": false,
    "spec": false
  }
}
